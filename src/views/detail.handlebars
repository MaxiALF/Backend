<main class="flex-grow-1 m-auto w-100 d-flex flex-column">
  <section
    id="products"
    class="flex-grow-1 d-flex flex-column justify-content-evenly align-items-center w-100 mt-4 mb-4"
  >
    <img
      src="{{product.photo}}"
      style="height: auto; width: auto"
      class="object-fit-cover"
      alt="{{product.title}}"
    />
    <article
      id="ProductDetail"
      class="d-flex flex-column justify-content-center align-items-center"
    >
      <h2
        id="productTitle"
        class="mt-4 mb-3 text-center text-warning"
      >{{product.title}}</h2>
      <h5 class="p-2 text-center card-title">Price: ${{product.price}}</h5>
      <h5 class="p-2 text-center card-title">Stock:
        {{product.stock}}</h5>
      <input
        id={{product._id}}
        class="addToCart btn btn-success fs-5 mt-3 mb-2 me-3 d-none"
        type="button"
        value="Add to cart!"
      />
    </article>
  </section>
</main>
<script src="/scripts/cart.js"></script>