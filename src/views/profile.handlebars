<main>
  <section
    id="user"
    class="flex-grow-1 d-flex flex-column justify-content-evenly align-items-center w-100 mt-4 mb-4"
  >
    <h2 class="text-warning mt-3 mb-3">Profile</h2>
    <img
      src="{{user.photo}}"
      style="height: 150px; width: 150px"
      class="object-fit-cover mt-3"
      alt="{{user.name}}"
    />
    <h2 class="mt-5 mb-5 text-center text-warning"><strong class="text-white">Name:</strong> {{user.name}}</h2>
    <h4 class="mt-3 mb-3"><strong>Email:</strong> {{user.email}}</h4>
    <h4 class="mt-3 mb-3"><strong>Role:</strong> {{user.role}}</h4>
    <a href="/" class="btn btn-success mt-5">Back to home</a>
  </section>
</main>
